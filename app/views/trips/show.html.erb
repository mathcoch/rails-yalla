<div class="banner_trip" style="background:url(<%= trip_photo_show_path(@trip) %>); height: 350px; background-repeat:no-repeat; background-size:cover">
  <div class="trip_descri text-center">
    <h1><%= @trip.title %></h1>
    <h4>By: <%= @trip.user.username %></h4>
    <% if policy(@trip).edit? %>
      <%= link_to "Edit ", edit_trip_path(@trip)%>
    <% end %>
  </div>
</div>
    <ul class="nav nav-tabs" role="tablist">
    <% @trip.trip_days.each_with_index do |tripday, index| %>
      <li role="presentation"><a href="#<%= tripday.title.downcase.gsub(' ', '_') %>" aria-controls="home" role="tab" data-toggle="tab"><%= tripday.title %></a></li>
    <% end %>
      <li class="active" role="presentation" data-show-unassigned="true" id="tab_all"><a href="#" aria-controls="home" role="tab" data-toggle="tab">Your week-end</a></li>
  </ul>
  <div class="imprim">
    <div class="mini-padded"></div>
      <div class="content-box padded-icon">
        <div class="content-box-icon">
            <%= link_to trip_path(@trip, format: :pdf), target: 'blank' do %>
            <div class="icon-printer icon-grey" ></div>
            <% end %>
        </div>
        <div class="content-box-title font-inc">
                Print
        </div>
      </div>
      <% unless @trip.user == current_user %>
      <div class="content-box padded-icon">
        <div class="content-box-icon">
          <div class="icon-heart"></div>
        </div>
        <div class="content-box-title font-inc">
                Like
        </div>
      </div>
      <% end %>
      <div class="content-box padded-icon">
        <div class="content-box-icon">
          <div class="icon-rss"></div>
        </div>
        <div class="content-box-title font-inc">
                Share
        </div>
      </div>
      <% if @trip.user == current_user %>
      <div class="content-box padded-icon">
        <div class="content-box-icon">
          <%= link_to edit_trip_path,format: :pdf do %>
            <div class="icon-pencil"></div>
          <% end %>
        </div>
        <div class="content-box-title font-inc">
                Edit
        </div>

      </div>
      <% end %>
  </div>
  <div class="padded"></div>
  <div class="col-xs-12 text-center border-bottom">
    <blockquote class="font-serif col-xs-10 col-xs-offset-1">
      <p>"<%= @trip.description %>"</p>
    </blockquote>
  </div>
  <div class="padded"></div>

  <div class="container_day tab-content">
    <% @trip.trip_days.each_with_index do |tripday, index| %>
    <%= render 'card_trip_show', tripday:tripday , index:index %>
    <% end %>
  </div>


<div class="container noassigned">
  <h3 class="text-center">No assigned activities</h3>
  <div class="mini-padded"></div>
  <div class="row">
      <% @trip.activities.each do |activity| %>
      <% if activity.trip_day_id == nil %>
        <%= render 'card_noassigned', activity:activity %>
      <% end %>
    <% end %>
  </div>
  <div class="padded"></div>
</div>


<% content_for :js do %>

  <%= javascript_tag do %>
    $(function () {
      $('#tab_all').on('click',function(e){
        $('#tab_all').parent().addClass('active');
        $('.tab-pane').addClass('active in');
        $('[data-toggle="tab"]').parent().removeClass('active');
      });

      $('[data-toggle="tab"]').click(function (e) {
        $('.noassigned').hide();
      });

      $('[data-show-unassigned="true"]').click(function (e) {
        $('.noassigned').show();
      });
    })
  <% end %>
<% end %>
