<li class="col-sm-12 col-md-3 col-lg-3 work-item <%= trip.category.downcase %>">
      <%= link_to trip_path(trip) do %>
        <div class="card-trip-img">
          <%= image_tag "cities/city" + Random.rand(1..8).to_s + ".jpg" %>
        </div>
      <% end %>
      <div class="work-caption">
        <h3 class="work-title font-alt"><%= trip.title %></h3>
          <div class="work-descr font-inc"><%= trip.user.name %>
          </div>
      </div>
</li>
