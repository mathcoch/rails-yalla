<!-- WRAPPER -->
<div class="wrapper">

  <!-- HOME -->
    <section class="module module-header bg-dark bg-dark-50" data-background=<%= image_path('cities/city2.jpg') %> >


    <div class="container">

      <!-- MODULE TITLE -->
      <div class="row">

        <div class="col-sm-6 col-sm-offset-3">

          <h1 class="module-title font-alt align-center">My travels</h1>

          <div class="module-subtitle font-inc align-center">
            All your past and future travels, your likes, ready for you!
          </div>

        </div>

      </div>
      <!-- /MODULE TITLE -->

    </div>

  </section >
  <!-- /HOME -->

  <!-- BLOG GRID -->
  <section class="module p-b-0 p-t-20">

    <div class="container">

      <!-- PORTFOLIO FILTER -->
      <div class="row">
        <div class="col-sm-12">

          <ul id="filters" class="filter font-inc hidden-xs">
            <li><a href="#" data-filter="*" class="current wow fadeInUp">All</a></li>
            <li><a href="#" data-filter=".personal_trips" class="wow fadeInUp" data-wow-delay="0.2s">Personal Trips</a></li>
            <li><a href="#" data-filter=".liked_trips" class="wow fadeInUp" data-wow-delay="0.4s">Liked Trips</a></li>
          </ul>
        </div>
      </div>
      <!-- /PORTFOLIO FILTER -->

      <!-- PORTFOLIO LIST -->
      <div class="row multi-columns-row post-columns">


        <!-- LOOP ON ITEMS -->
        <ul id="works-grid" class="works-grid works-grid-masonry works-grid-3 works-hover-w">
        <% @trips.each do |trip| %>
          <%= render 'card_mytrip', trip: trip %>
        <% end %>
      </ul>

      </div>
    </div>
  </section>
  <section class="module-small">
    <div class="buttons_home text-center">
      <%= link_to t("CREATE A TRIP"), new_trip_path, :class => "btn btn-success btn-lg" %>
      <%= link_to t("EXPLORE MORE"), trips_path, :class => "btn btn-primary btn-lg" %>
    </div>
  </section>
</div>


<% content_for(:js) do %>
  <script>
    $(document).ready(function() {
      $( ".heart > .fa" ).click(function() {
        $( this ).toggleClass( "red-heart pink-heart" );
      });
    });
  </script>
<% end %>
