<div id="map-activities">
  <%= render 'shared/maps', map_hash: @hash %>
</div>

<div class="padded"></div>
<div class="container text-center">
  <!-- Trigger the modal with a button -->
  <button type="button" class="btn btn-g" data-toggle="modal" data-target="#modal_category">Add Activity</button>
  <%= render 'form_new_activity_by_category', activity: @activity, main_categories: @main_categories %>

  <!-- Trigger the modal with a button -->
  <button type="button" class="btn btn-g" data-toggle="modal" data-target="#modal_establishment">Add Establishment</button>
  <%= render 'form_new_activity_by_establishment', activity: @activity %>

<div class="mini-padded"></div>
  <div class="row">
    <% @activities.each do |activity| %>
      <%= render 'card_activity_index', activity: activity %>
    <% end %>
  </div>
</div>
<div class="padded"></div>



