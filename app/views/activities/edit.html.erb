<%= simple_form_for (@activity) do |f| %>

  <% if @activity.errors.any? %>
   <div id="error_explanation">
     <ul>
     <% @activity.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
     </ul>
   </div>
  <% end %>


  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :establishment %>
  <%= f.input :address %>
  <%= f.input :city %>

  <%= f.input :trip_day_id %>
  <%= f.association :main_category %>
  <%= f.button :submit %>

<% end %>
